<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="8dp">


        <TextView
            android:id="@+id/selectLanguageSame_TextView"
            style="@style/TextAppearance.AppTheme.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/headingNormalTextColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hindi" />

        <TextView
            android:id="@+id/selectLanguageDifferent_TextView"
            style="@style/TextAppearance.AppTheme.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/fadeTextColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/selectLanguageSame_TextView"
            app:layout_constraintStart_toEndOf="@+id/selectLanguageSame_TextView"
            app:layout_constraintTop_toTopOf="@+id/selectLanguageSame_TextView"
            tools:text="( हिन्दी )" />

        <ImageView
            android:id="@+id/tickImageView"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_tick"
            app:tint="@color/headingNormalTextColor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>